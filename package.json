{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "preview": "nuxt preview",
    "start": "nuxt build && nuxt preview",
    "generate": "nuxt generate",
    "postinstall": "nuxt prepare",
    "typecheck": "nuxt typecheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:migrate": "wrangler d1 migrations apply DB --local",
    "db:migrate:test": "wrangler d1 migrations apply DB --remote --env=\"\"",
    "db:migrate:prod": "wrangler d1 migrations apply DB --remote --env=\"production\"",
    "db:reset": "rm -rf .wrangler/state/v3/d1/miniflare-D1DatabaseObject && pnpm run db:migrate",
    "db:backup": "wrangler d1 export DB --output=backup-local.sql --local",
    "db:backup:test": "wrangler d1 export DB --output=backup-test.sql --remote --env=\"\"",
    "db:backup:prod": "wrangler d1 export DB --output=backup-prod.sql --remote --env=\"production\"",
    "deploy:test": "pnpm run build && wrangler deploy --assets .output/public --env=\"\"",
    "deploy:prod": "pnpm run build && wrangler deploy --assets .output/public --env=\"production\"",
    "deploy:all": "pnpm run deploy:test && pnpm run deploy:prod",
    "prepare": "husky",
    "preview:e2e": "nuxt dev --port 8787",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:browser": "playwright test --headed --reporter=html",
    "test:e2e:headed": "playwright test --headed"
  },
  "dependencies": {
    "@nuxt/icon": "^2.0.0",
    "@nuxtjs/i18n": "^10.1.0",
    "cookie": "^1.0.2",
    "daisyui": "^5.0.50",
    "drizzle-orm": "^0.44.4",
    "echarts": "^5.6.0",
    "nuxt": "4.1.0",
    "pinia": "^3.0.3",
    "tailwindcss": "^4.1.11",
    "vue": "^3.5.18",
    "vue-echarts": "^7.0.3",
    "vue-router": "^4.5.1",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@iconify-json/heroicons": "^1.2.2",
    "@nuxt/eslint": "1.7.1",
    "@pinia/nuxt": "^0.11.2",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/vite": "^4.1.11",
    "eslint": "^9.32.0",
    "h3": "^1.15.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vue-tsc": "^3.0.6",
    "wrangler": "^4.51.0"
  },
  "lint-staged": {
    "*.{ts,vue,js}": [
      "eslint --fix"
    ]
  },
  "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b"
}
